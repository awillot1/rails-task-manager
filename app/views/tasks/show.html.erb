<h1><%= @task.title %></h1>

<div>
  <%= @task.details %>
</div>

<%= link_to "Back to list", tasks_path %>

<% if @task.completed == true %>
  <div class="checkbox">
    <label>
      <input type="checkbox" value="" checked>
        <%= "This task is completed" %>
    </label>
  </div>
  <% else  %>
    <div class="checkbox">
     <label>
        <input type="checkbox" value="">
          <%= "This task is completed" %>
      </label>
    </div>
<% end %>

<%= link_to "Add a task", new_task_path %>
